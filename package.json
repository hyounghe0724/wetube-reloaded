{
  "name": "wetube",
  "version": "1.0.0",
  "description": "The best way to watch video",

  /* Heroku가 LTS 이미지를 사용하도록 Node 버전 고정 */
  "engines": {
    "node": "20.x"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyounghe0724/wetube-reloaded.git"
  },

  "scripts": {
    /* 프로덕션 실행: 빌드 결과물을 사용 */
    "start": "node build/init.js",

    /* 로컬·Heroku 공통 빌드 파이프라인 */
    "build": "npm run build:server && npm run build:assets",
    "build:server": "babel src -d build",
    "build:assets": "webpack --mode=production",

    /* 개발용 편의 스크립트 */
    "dev:server": "nodemon",
    "dev:assets": "webpack --mode=development -w",

    /* Heroku slug 빌드 완료 후 자동 실행 → devDependencies 포함 설치 + 빌드 */
    "heroku-postbuild": "npm run build"
  },

  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyounghe0724/wetube-reloaded/issues"
  },
  "homepage": "https://github.com/hyounghe0724/wetube-reloaded#readme",

  "dependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "aws-sdk": "^2.1267.0",
    "axios": "^1.1.3",
    "bcrypt": "^5.0.1",
    "connect-mongo": "^4.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-flash": "^0.0.2",
    "express-messages": "^1.0.1",
    "express-session": "^1.17.3",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "node-fetch": "^2.6.1",
    "pug": "^3.0.2",
    "regenerator-runtime": "^0.13.10"
  },

  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "mini-css-extract-plugin": "^2.6.1",
    "nodemon": "^2.0.19",
    "sass": "^1.55.0",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
